@using System.Security.Claims
@model List<Skill>

<h1>Kompetenser</h1>
<div>
	<table class="table-bordered">
		<thead>
			<tr>
				<td>Kompetens</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var skill in Model)
			{
				<tr>
					<td>@skill.Name</td>
					<td>
						<form asp-controller="CV" asp-action="EditSkill" asp-route-id="@skill.Id" method="get">
							<input type="submit" value="Ändra" class="submitbutton"/>
						</form>
					</td>
					<td>
						<form asp-controller="CV" asp-action="DeleteSkill" asp-route-id="@skill.Id" method="post">
							<input type="submit" value="Ta bort" class="submitbutton"/>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<a asp-controller="CV" asp-action="AddSkill">Lägg till</a>
<br />


@{
	ClaimsPrincipal currentUser = this.User;
	var userId = currentUser.FindFirst(ClaimTypes.NameIdentifier).Value;
}
<br />
<a asp-controller="CV" asp-action="CV" asp-route-id="@userId">Tillbaka</a>
